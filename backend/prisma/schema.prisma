generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Identity {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
  loginAttempts Int @default(0)
  isPersonalDataFilled Boolean @default(false)
  createdAt DateTime @default(now())
}